{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "dom.iterable", "es6", "esnext", "scripthost"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    // "sourceMap": false /* simplifies debugging by allowin you to place breakpoints in browser  */,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },

  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "types", "src"],
  "exclude": ["node_modules"]
}
